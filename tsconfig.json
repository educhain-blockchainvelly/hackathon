{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@contracts/*": ["contracts/*"],
      "@test/*": ["test/*"]
    },
    "lib": ["es2020", "dom"]
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}

